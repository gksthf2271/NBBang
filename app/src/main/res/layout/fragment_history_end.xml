<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.khs.nbbang.history.HistoryViewModel" />
    </data>


    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motion_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/fragment_history_xml_constraintlayout_scene">

        <include
            android:id="@+id/cview_select_month"
            layout="@layout/cview_select_month"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintHeight_percent="0.15" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/history_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.98"
            app:layout_constraintTop_toBottomOf="@id/divider" />

    </androidx.constraintlayout.motion.widget.MotionLayout>

</layout>