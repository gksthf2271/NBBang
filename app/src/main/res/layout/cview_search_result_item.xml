<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:focusable="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_info"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:paddingStart="10dp"
        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintStart_toStartOf="parent"
        apps:layout_constraintWidth_percent="0.8">

        <TextView
            android:id="@+id/txt_result_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:textColor="@color/search_title_color"
            android:textSize="14sp"
            apps:layout_constraintHeight_percent="0.4"
            apps:layout_constraintStart_toStartOf="parent"
            apps:layout_constraintTop_toBottomOf="@+id/txt_result_address"
            apps:layout_constraintTop_toTopOf="parent"
            apps:layout_constraintWidth_percent="0.8"
            tools:text="세븐일레븐 한성대역점" />

        <TextView
            android:id="@+id/txt_result_address"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:textColor="@color/search_description_color"
            android:textSize="12sp"
            apps:layout_constraintBottom_toTopOf="@+id/txt_result_phone_number"
            apps:layout_constraintHeight_percent="0.3"
            apps:layout_constraintStart_toStartOf="parent"
            apps:layout_constraintTop_toBottomOf="@id/txt_result_title"
            apps:layout_constraintWidth_percent="0.8"
            tools:text="서울 성북구 동소문로3길 4 (동소문동1가)" />

        <TextView
            android:id="@+id/txt_result_category"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:textColor="@color/search_description_color"
            android:textSize="12sp"
            apps:layout_constraintBottom_toBottomOf="parent"
            apps:layout_constraintHeight_percent="0.2"
            apps:layout_constraintStart_toStartOf="parent"
            apps:layout_constraintTop_toBottomOf="@id/txt_result_address"
            tools:text="편의점" />

        <TextView
            android:id="@+id/txt_result_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:textColor="@color/app_point_color"
            android:textSize="12sp"
            apps:layout_constraintBottom_toBottomOf="parent"
            apps:layout_constraintHeight_percent="0.2"
            apps:layout_constraintStart_toEndOf="@+id/txt_result_category"
            apps:layout_constraintTop_toBottomOf="@id/txt_result_address"
            tools:text="02-1234-5678" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/img_go_map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:src="@drawable/icon_map"
        apps:layout_constraintBottom_toBottomOf="parent"
        apps:layout_constraintEnd_toEndOf="parent"
        apps:layout_constraintStart_toEndOf="@+id/group_info"
        apps:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@color/button_color_shadow"
        apps:layout_constraintStart_toStartOf="parent"
        apps:layout_constraintEnd_toEndOf="parent"
        apps:layout_constraintBottom_toBottomOf="parent"
        apps:layout_constraintHeight_percent="0.01"
        apps:layout_constraintWidth_percent="0.9" />
</androidx.constraintlayout.widget.ConstraintLayout>

