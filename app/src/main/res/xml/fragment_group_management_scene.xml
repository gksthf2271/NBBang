<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/add_motion_transition"
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="500">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="100"
                motion:motionTarget="@id/add_member_view" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start" />

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/add_member_view"
            android:layout_width="0dp"
            android:layout_height="400dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.05"
            motion:layout_constraintWidth_percent="0.9" />

        <Constraint
            android:id="@+id/btn_add"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:rotation="90"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toBottomOf="parent" />

    </ConstraintSet>


    <!--    Member Click Motion-->
    <Transition
        android:id="@+id/update_motion_transition"
        motion:constraintSetEnd="@id/clicked_member_end"
        motion:constraintSetStart="@id/clicked_member_start"
        motion:duration="500">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="100"
                motion:motionTarget="@id/member_view" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/clicked_member_start" />

    <ConstraintSet android:id="@+id/clicked_member_end">
        <Constraint
            android:id="@id/member_view"
            android:layout_width="0dp"
            android:layout_height="400dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.05"
            motion:layout_constraintWidth_percent="0.9" />

        <Constraint
            android:id="@+id/btn_add"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:rotation="90"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toBottomOf="parent" />
    </ConstraintSet>


    <!--        RecyclerView Scroll motion-->
    <Transition
        android:id="@+id/scroll_motion_transition"
        motion:constraintSetEnd="@id/scroll_end"
        motion:constraintSetStart="@id/scroll_start"
        motion:duration="1000">

        <OnSwipe
            motion:dragDirection="dragDown"
            motion:targetId="@id/recycler_member_list"
            motion:moveWhenScrollAtTop="true"
            motion:touchAnchorSide="top" />

        <KeyFrameSet>

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="50"
                motion:motionTarget="@id/group_title" />

            <KeyAttribute
                android:alpha="0"
                android:scaleX="0"
                android:scaleY="0"
                motion:framePosition="100"
                motion:motionTarget="@+id/group_title" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/scroll_start">

        <Constraint
            android:id="@id/group_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@id/recycler_member_list"
            motion:layout_constraintHeight_percent="0.12"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/recycler_member_list"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/group_title" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/scroll_end">
        <Constraint
            android:id="@id/group_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@id/recycler_member_list"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/recycler_member_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/group_title" />
    </ConstraintSet>
</MotionScene>