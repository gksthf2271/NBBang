<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeMenuFragment">

    <action
        android:id="@+id/action_go_to_home_menu"
        app:destination="@id/homeMenuFragment" />

    <action
        android:id="@+id/action_go_to_dutch_pay"
        app:destination="@id/dutchPayMainFragment" />

    <action
        android:id="@+id/action_go_to_history"
        app:destination="@id/historyFragment" />

    <action
        android:id="@+id/action_go_to_my_page"
        app:destination="@id/myPageFragment" />

    <fragment
        android:id="@+id/homeMenuFragment"
        android:name="com.khs.nbbang.page.HomeMenuFragment"
        android:label="메뉴"
        tools:layout="@layout/fragment_home_menu">

        <action
            android:id="@+id/action_home_menu_to_history"
            app:destination="@id/historyFragment" />

        <action
            android:id="@+id/action_home_menu_to_dutch_pay_home"
            app:destination="@id/dutchPayMainFragment" />

        <action
            android:id="@+id/action_home_menu_to_my_page"
            app:destination="@id/myPageFragment" />
    </fragment>

    <fragment
        android:id="@+id/historyFragment"
        android:name="com.khs.nbbang.history.HistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_history">

    </fragment>

    <fragment
        android:id="@+id/dutchPayMainFragment"
        android:name="com.khs.nbbang.page.DutchPayMainFragment"
        android:label="더치 페이"
        tools:layout="@layout/fragment_page_home">

        <argument android:name="api"
            android:defaultValue="api"/>
        <deepLink app:uri="page/{api}" />

        <action
            android:id="@+id/action_dutch_pay_home_to_history"
            app:destination="@id/historyFragment"/>

        <action
            android:id="@+id/action_dutch_pay_home_to_home_menu"
            app:destination="@id/homeMenuFragment"/>

    </fragment>

    <fragment
        android:id="@+id/myPageFragment"
        android:name="com.khs.nbbang.mypage.MyPageFragment"
        android:label="MyPage"
        tools:layout="@layout/fragment_my_page">
    </fragment>

<!--    <include-->
<!--        app:graph="@navigation/nav_view_pager" />-->

</navigation>